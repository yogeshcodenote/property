<div class="mb-8">
  <div class="flex items-center justify-between">
    <div>
      <h2 class="text-2xl font-bold tracking-tight text-slate-900">Edit Property</h2>
      <p class="text-slate-500 mt-1">Update property information and details.</p>
    </div>
    <div class="flex gap-3">
      <%= link_to property_path(@property), class: "btn-secondary flex items-center gap-2" do %>
        <span class="material-symbols-outlined">visibility</span>
        View Property
      <% end %>
      <%= link_to properties_path, class: "btn-secondary flex items-center gap-2" do %>
        <span class="material-symbols-outlined">arrow_back</span>
        Back
      <% end %>
    </div>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
  <!-- Main Form -->
  <div class="lg:col-span-2 space-y-6">
    <!-- Basic Information -->
    <div class="card p-6">
      <div class="flex items-center gap-3 mb-6">
        <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
          <span class="material-symbols-outlined text-green-600">info</span>
        </div>
        <h3 class="text-lg font-semibold text-slate-900">Basic Information</h3>
      </div>
      
      <%= form_with model: @property, local: true, html: { multipart: true, class: "space-y-6" } do |f| %>
        <div>
          <label class="block text-sm font-medium text-slate-700 mb-2">
            Property Title <span class="text-red-500">*</span>
          </label>
          <%= f.text_field :title, 
              class: "input-field w-full", 
              placeholder: "e.g., Premium Residential Plot" %>
          <% if @property.errors[:title].any? %>
            <p class="mt-1 text-sm text-red-600"><%= @property.errors[:title].join(", ") %></p>
          <% end %>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label class="block text-sm font-medium text-slate-700 mb-2">
              Colony Name <span class="text-red-500">*</span>
            </label>
            <%= f.text_field :colony_name, 
                class: "input-field w-full", 
                placeholder: "e.g., Green Valley" %>
            <% if @property.errors[:colony_name].any? %>
              <p class="mt-1 text-sm text-red-600"><%= @property.errors[:colony_name].join(", ") %></p>
            <% end %>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-slate-700 mb-2">
              Plot Number <span class="text-red-500">*</span>
            </label>
            <%= f.text_field :plot_number, 
                class: "input-field w-full", 
                placeholder: "e.g., A-101" %>
            <% if @property.errors[:plot_number].any? %>
              <p class="mt-1 text-sm text-red-600"><%= @property.errors[:plot_number].join(", ") %></p>
            <% end %>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label class="block text-sm font-medium text-slate-700 mb-2">
              <span class="material-symbols-outlined text-sm align-middle">square_foot</span>
              Size (sq. ft.) <span class="text-red-500">*</span>
            </label>
            <%= f.number_field :size, 
                step: 0.01, 
                class: "input-field w-full", 
                placeholder: "e.g., 1200" %>
            <% if @property.errors[:size].any? %>
              <p class="mt-1 text-sm text-red-600"><%= @property.errors[:size].join(", ") %></p>
            <% end %>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-slate-700 mb-2">
              <span class="material-symbols-outlined text-sm align-middle">currency_rupee</span>
              Price <span class="text-red-500">*</span>
            </label>
            <%= f.number_field :price, 
                step: 0.01, 
                class: "input-field w-full", 
                placeholder: "e.g., 5000000" %>
            <% if @property.errors[:price].any? %>
              <p class="mt-1 text-sm text-red-600"><%= @property.errors[:price].join(", ") %></p>
            <% end %>
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium text-slate-700 mb-2">
            <span class="material-symbols-outlined text-sm align-middle">status</span>
            Property Status
          </label>
          <div class="grid grid-cols-3 gap-3">
            <% Property.statuses.keys.each do |status| %>
              <label class="relative flex items-center p-4 rounded-lg border-2 cursor-pointer transition-all
                  <%= @property.status == status ? 'border-primary bg-green-50' : 'border-slate-200 hover:border-slate-300' %>">
                <%= f.radio_button :status, status, class: "hidden" %>
                <div class="flex-1 text-center">
                  <span class="material-symbols-outlined text-2xl mx-auto mb-1 
                    <%= status == 'available' ? 'text-green-600' : status == 'sold' ? 'text-red-600' : 'text-yellow-600' %>">
                    <%= status == 'available' ? 'check_circle' : status == 'sold' ? 'sell' : 'pending' %>
                  </span>
                  <p class="text-sm font-semibold text-slate-900"><%= status.capitalize %></p>
                </div>
              </label>
            <% end %>
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium text-slate-700 mb-2">
            <span class="material-symbols-outlined text-sm align-middle">description</span>
            Description
          </label>
          <%= f.text_area :description, 
              rows: 4, 
              class: "input-field w-full", 
              placeholder: "Describe the property highlights..." %>
          <p class="mt-1 text-xs text-slate-500">Highlight key features and amenities</p>
        </div>

        <!-- Image Upload -->
        <div>
          <label class="block text-sm font-medium text-slate-700 mb-2">
            <span class="material-symbols-outlined text-sm align-middle">imagesmode</span>
            Property Images
          </label>
          
          <% if @property.images.attached? %>
            <div class="mb-4">
              <p class="text-sm font-medium text-slate-700 mb-3">Current Images</p>
              <div class="grid grid-cols-3 md:grid-cols-4 gap-3">
                <% @property.images.each do |image| %>
                  <div class="relative group aspect-square rounded-lg overflow-hidden border-2 border-slate-200">
                    <%= image_tag image, class: "w-full h-full object-cover" %>
                    <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
                      <span class="material-symbols-outlined text-white">check</span>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
          
          <div class="border-2 border-dashed border-slate-300 rounded-xl p-8 text-center hover:border-primary transition-colors bg-slate-50">
            <span class="material-symbols-outlined text-slate-400 text-5xl mb-3">cloud_upload</span>
            <p class="text-sm font-medium text-slate-700 mb-1">Add more images</p>
            <p class="text-xs text-slate-500 mb-4">PNG, JPG up to 10MB each</p>
            <%= f.file_field :images, 
                multiple: true, 
                class: "hidden", 
                id: "property_images",
                accept: "image/*" %>
            <label for="property_images" class="btn-primary inline-flex items-center gap-2 cursor-pointer">
              <span class="material-symbols-outlined">add_a_photo</span>
              Select Images
            </label>
          </div>
        </div>

        <!-- Form Actions -->
        <div class="flex items-center justify-end gap-4 pt-6 border-t border-slate-200">
          <%= link_to "Cancel", properties_path, class: "btn-secondary" %>
          <%= f.submit "Update Property", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Sidebar -->
  <div class="space-y-6">
    <!-- Property Preview Card -->
    <div class="card p-6 bg-gradient-to-br from-blue-50 to-cyan-50 border-blue-200">
      <div class="flex items-center gap-3 mb-4">
        <div class="w-10 h-10 bg-blue-200 rounded-lg flex items-center justify-center">
          <span class="material-symbols-outlined text-blue-700">preview</span>
        </div>
        <h3 class="text-lg font-semibold text-blue-900">Property Preview</h3>
      </div>
      <div class="space-y-3">
        <div class="p-3 bg-white rounded-lg border border-blue-100">
          <p class="text-xs text-slate-500 mb-1">Plot Number</p>
          <p class="font-semibold text-slate-900"><%= @property.plot_number %></p>
        </div>
        <div class="p-3 bg-white rounded-lg border border-blue-100">
          <p class="text-xs text-slate-500 mb-1">Colony</p>
          <p class="font-semibold text-slate-900"><%= @property.colony_name %></p>
        </div>
        <div class="p-3 bg-white rounded-lg border border-blue-100">
          <p class="text-xs text-slate-500 mb-1">Size</p>
          <p class="font-semibold text-slate-900"><%= number_with_delimiter(@property.size) %> sq ft</p>
        </div>
        <div class="p-3 bg-white rounded-lg border border-blue-100">
          <p class="text-xs text-slate-500 mb-1">Price</p>
          <p class="font-bold text-green-600">â‚¹<%= number_with_delimiter(@property.price) %></p>
        </div>
      </div>
    </div>

    <!-- Quick Tips Card -->
    <div class="card p-6 bg-gradient-to-br from-green-50 to-emerald-50 border-green-200">
      <div class="flex items-center gap-3 mb-4">
        <div class="w-10 h-10 bg-green-200 rounded-lg flex items-center justify-center">
          <span class="material-symbols-outlined text-green-700">lightbulb</span>
        </div>
        <h3 class="text-lg font-semibold text-green-900">Quick Tips</h3>
      </div>
      <ul class="space-y-3">
        <li class="flex items-start gap-3">
          <span class="material-symbols-outlined text-green-600 text-sm mt-0.5">verified</span>
          <span class="text-sm text-green-800">Keep property title clear and descriptive</span>
        </li>
        <li class="flex items-start gap-3">
          <span class="material-symbols-outlined text-green-600 text-sm mt-0.5">verified</span>
          <span class="text-sm text-green-800">Update status when property is sold/reserved</span>
        </li>
        <li class="flex items-start gap-3">
          <span class="material-symbols-outlined text-green-600 text-sm mt-0.5">verified</span>
          <span class="text-sm text-green-800">Add high-quality images for better visibility</span>
        </li>
        <li class="flex items-start gap-3">
          <span class="material-symbols-outlined text-green-600 text-sm mt-0.5">verified</span>
          <span class="text-sm text-green-800">Keep description updated with latest info</span>
        </li>
      </ul>
    </div>

    <!-- AI Tools Card -->
    <div class="card p-6 bg-gradient-to-br from-purple-50 to-pink-50 border-purple-200">
      <div class="flex items-center gap-3 mb-4">
        <div class="w-10 h-10 bg-purple-200 rounded-lg flex items-center justify-center">
          <span class="material-symbols-outlined text-purple-700">auto_awesome</span>
        </div>
        <h3 class="text-lg font-semibold text-purple-900">AI Tools</h3>
      </div>
      <p class="text-sm text-purple-800 mb-4">Generate marketing content for this property</p>
      <div class="space-y-2">
        <%= link_to ai_generator_description_path(property_id: @property.id), 
            class: "flex items-center gap-2 p-2 bg-white rounded-lg border border-purple-100 hover:border-purple-300 transition-colors text-sm" do %>
          <span class="material-symbols-outlined text-purple-600 text-sm">pencil</span>
          <span class="text-purple-800">Generate Description</span>
        <% end %>
        <%= link_to ai_generator_social_post_path(property_id: @property.id), 
            class: "flex items-center gap-2 p-2 bg-white rounded-lg border border-purple-100 hover:border-purple-300 transition-colors text-sm" do %>
          <span class="material-symbols-outlined text-purple-600 text-sm">share</span>
          <span class="text-purple-800">Generate Social Post</span>
        <% end %>
      </div>
    </div>
  </div>
</div>
