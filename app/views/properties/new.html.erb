<div class="mb-8">
  <div class="flex items-center justify-between">
    <div>
      <h2 class="text-2xl font-bold tracking-tight text-slate-900">Add New Property</h2>
      <p class="text-slate-500 mt-1">List a new property in your portfolio.</p>
    </div>
    <%= link_to properties_path, class: "btn-secondary flex items-center gap-2" do %>
      <span class="material-symbols-outlined">arrow_back</span>
      Back to Properties
    <% end %>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
  <!-- Main Form -->
  <div class="lg:col-span-2 space-y-6">
    <!-- Basic Information -->
    <div class="card p-6">
      <div class="flex items-center gap-3 mb-6">
        <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
          <span class="material-symbols-outlined text-green-600">info</span>
        </div>
        <h3 class="text-lg font-semibold text-slate-900">Basic Information</h3>
      </div>
      
      <%= form_with model: @property, local: true, html: { multipart: true, class: "space-y-6" } do |f| %>
        <div>
          <label class="block text-sm font-medium text-slate-700 mb-2">
            Property Title <span class="text-red-500">*</span>
          </label>
          <%= f.text_field :title, 
              class: "input-field w-full", 
              placeholder: "e.g., Premium Residential Plot, Corner Plot, Park Facing Property" %>
          <% if @property.errors[:title].any? %>
            <p class="mt-1 text-sm text-red-600"><%= @property.errors[:title].join(", ") %></p>
          <% end %>
          <p class="mt-1 text-xs text-slate-500">Give your property a descriptive and attractive title</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label class="block text-sm font-medium text-slate-700 mb-2">
              Colony Name <span class="text-red-500">*</span>
            </label>
            <%= f.text_field :colony_name, 
                class: "input-field w-full", 
                placeholder: "e.g., Green Valley, Sunrise Colony" %>
            <% if @property.errors[:colony_name].any? %>
              <p class="mt-1 text-sm text-red-600"><%= @property.errors[:colony_name].join(", ") %></p>
            <% end %>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-slate-700 mb-2">
              Plot Number <span class="text-red-500">*</span>
            </label>
            <%= f.text_field :plot_number, 
                class: "input-field w-full", 
                placeholder: "e.g., A-101, B-202" %>
            <% if @property.errors[:plot_number].any? %>
              <p class="mt-1 text-sm text-red-600"><%= @property.errors[:plot_number].join(", ") %></p>
            <% end %>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label class="block text-sm font-medium text-slate-700 mb-2">
              <span class="material-symbols-outlined text-sm align-middle">square_foot</span>
              Size (sq. ft.) <span class="text-red-500">*</span>
            </label>
            <%= f.number_field :size, 
                step: 0.01, 
                class: "input-field w-full", 
                placeholder: "e.g., 1200" %>
            <% if @property.errors[:size].any? %>
              <p class="mt-1 text-sm text-red-600"><%= @property.errors[:size].join(", ") %></p>
            <% end %>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-slate-700 mb-2">
              <span class="material-symbols-outlined text-sm align-middle">currency_rupee</span>
              Price <span class="text-red-500">*</span>
            </label>
            <%= f.number_field :price, 
                step: 0.01, 
                class: "input-field w-full", 
                placeholder: "e.g., 5000000" %>
            <% if @property.errors[:price].any? %>
              <p class="mt-1 text-sm text-red-600"><%= @property.errors[:price].join(", ") %></p>
            <% end %>
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium text-slate-700 mb-2">
            <span class="material-symbols-outlined text-sm align-middle">status</span>
            Property Status
          </label>
          <div class="grid grid-cols-3 gap-3">
            <% Property.statuses.keys.each do |status| %>
              <label class="relative flex items-center p-4 rounded-lg border-2 cursor-pointer transition-all
                  <%= @property.status == status ? 'border-primary bg-green-50' : 'border-slate-200 hover:border-slate-300' %>">
                <%= f.radio_button :status, status, class: "hidden" %>
                <div class="flex-1 text-center">
                  <span class="material-symbols-outlined text-2xl mx-auto mb-1 
                    <%= status == 'available' ? 'text-green-600' : status == 'sold' ? 'text-red-600' : 'text-yellow-600' %>">
                    <%= status == 'available' ? 'check_circle' : status == 'sold' ? 'sell' : 'pending' %>
                  </span>
                  <p class="text-sm font-semibold text-slate-900"><%= status.capitalize %></p>
                </div>
              </label>
            <% end %>
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium text-slate-700 mb-2">
            <span class="material-symbols-outlined text-sm align-middle">description</span>
            Description
          </label>
          <%= f.text_area :description, 
              rows: 4, 
              class: "input-field w-full", 
              placeholder: "Describe the property highlights, amenities, location advantages..." %>
          <p class="mt-1 text-xs text-slate-500">Highlight key features like location, nearby amenities, facing direction, etc.</p>
        </div>

        <!-- Image Upload -->
        <div>
          <label class="block text-sm font-medium text-slate-700 mb-2">
            <span class="material-symbols-outlined text-sm align-middle">imagesmode</span>
            Property Images
          </label>
          <div class="border-2 border-dashed border-slate-300 rounded-xl p-8 text-center hover:border-primary transition-colors bg-slate-50">
            <span class="material-symbols-outlined text-slate-400 text-5xl mb-3">cloud_upload</span>
            <p class="text-sm font-medium text-slate-700 mb-1">Click to upload or drag and drop</p>
            <p class="text-xs text-slate-500 mb-4">PNG, JPG up to 10MB each</p>
            <%= f.file_field :images, 
                multiple: true, 
                class: "hidden", 
                id: "property_images",
                accept: "image/*" %>
            <label for="property_images" class="btn-primary inline-flex items-center gap-2 cursor-pointer">
              <span class="material-symbols-outlined">add_a_photo</span>
              Select Images
            </label>
            <p class="mt-3 text-xs text-slate-500">Upload high-quality photos for better visibility</p>
          </div>
        </div>

        <!-- Form Actions -->
        <div class="flex items-center justify-end gap-4 pt-6 border-t border-slate-200">
          <%= link_to "Cancel", properties_path, class: "btn-secondary" %>
          <%= f.submit "Create Property", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Sidebar -->
  <div class="space-y-6">
    <!-- Tips Card -->
    <div class="card p-6">
      <div class="flex items-center gap-3 mb-4">
        <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
          <span class="material-symbols-outlined text-blue-600">lightbulb</span>
        </div>
        <h3 class="text-lg font-semibold text-slate-900">Quick Tips</h3>
      </div>
      <ul class="space-y-3">
        <li class="flex items-start gap-3">
          <span class="material-symbols-outlined text-green-600 text-sm mt-0.5">check_circle</span>
          <span class="text-sm text-slate-600">Use a clear, descriptive title that highlights key features</span>
        </li>
        <li class="flex items-start gap-3">
          <span class="material-symbols-outlined text-green-600 text-sm mt-0.5">check_circle</span>
          <span class="text-sm text-slate-600">Enter the exact colony name for better searchability</span>
        </li>
        <li class="flex items-start gap-3">
          <span class="material-symbols-outlined text-green-600 text-sm mt-0.5">check_circle</span>
          <span class="text-sm text-slate-600">Use consistent plot numbering across your colonies</span>
        </li>
        <li class="flex items-start gap-3">
          <span class="material-symbols-outlined text-green-600 text-sm mt-0.5">check_circle</span>
          <span class="text-sm text-slate-600">Upload high-quality, well-lit property images</span>
        </li>
        <li class="flex items-start gap-3">
          <span class="material-symbols-outlined text-green-600 text-sm mt-0.5">check_circle</span>
          <span class="text-sm text-slate-600">Add detailed descriptions with all amenities</span>
        </li>
      </ul>
    </div>

    <!-- Requirements Card -->
    <div class="card p-6 bg-gradient-to-br from-green-50 to-white border-green-200">
      <div class="flex items-center gap-3 mb-4">
        <div class="w-10 h-10 bg-green-200 rounded-lg flex items-center justify-center">
          <span class="material-symbols-outlined text-green-700">assignment</span>
        </div>
        <h3 class="text-lg font-semibold text-green-900">Required Fields</h3>
      </div>
      <p class="text-sm text-green-800 mb-4">Make sure to fill all required fields marked with <span class="text-red-500">*</span></p>
      <div class="space-y-2">
        <div class="flex items-center gap-2 text-sm text-green-700">
          <span class="w-1.5 h-1.5 rounded-full bg-green-500"></span>
          Property Title
        </div>
        <div class="flex items-center gap-2 text-sm text-green-700">
          <span class="w-1.5 h-1.5 rounded-full bg-green-500"></span>
          Colony Name
        </div>
        <div class="flex items-center gap-2 text-sm text-green-700">
          <span class="w-1.5 h-1.5 rounded-full bg-green-500"></span>
          Plot Number
        </div>
        <div class="flex items-center gap-2 text-sm text-green-700">
          <span class="w-1.5 h-1.5 rounded-full bg-green-500"></span>
          Size & Price
        </div>
      </div>
    </div>

    <!-- AI Assistant Card -->
    <div class="card p-6 bg-gradient-to-br from-purple-50 to-white border-purple-200">
      <div class="flex items-center gap-3 mb-4">
        <div class="w-10 h-10 bg-purple-200 rounded-lg flex items-center justify-center">
          <span class="material-symbols-outlined text-purple-700">auto_awesome</span>
        </div>
        <h3 class="text-lg font-semibold text-purple-900">AI Assistant</h3>
      </div>
      <p class="text-sm text-purple-800 mb-4">Need help writing a property description? Use our AI generator after creating the property!</p>
      <div class="p-3 bg-white rounded-lg border border-purple-100">
        <p class="text-xs text-purple-700 italic">"Generate professional descriptions, social media posts, and marketing content in seconds."</p>
      </div>
    </div>
  </div>
</div>

<script>
  // Add preview functionality for uploaded images
  document.getElementById('property_images')?.addEventListener('change', function(e) {
    const files = e.target.files;
    if (files.length > 0) {
      let fileNames = Array.from(files).map(f => f.name).join(', ');
      const preview = document.createElement('div');
      preview.className = 'mt-4 p-4 bg-green-50 rounded-lg border border-green-200';
      preview.innerHTML = `
        <div class="flex items-center gap-3">
          <span class="material-symbols-outlined text-green-600">check_circle</span>
          <div>
            <p class="text-sm font-medium text-green-900">${files.length} file(s) selected</p>
            <p class="text-xs text-green-700 truncate">${fileNames}</p>
          </div>
        </div>
      `;
      e.target.parentElement.appendChild(preview);
    }
  });
</script>
