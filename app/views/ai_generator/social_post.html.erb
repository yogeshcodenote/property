<div class="mb-8">
  <div class="flex items-center justify-between">
    <div>
      <h2 class="text-3xl font-bold tracking-tight text-slate-900">AI Social Media Generator</h2>
      <p class="text-slate-500 mt-1">Create engaging social media posts in seconds.</p>
    </div>
    <%= link_to property_path(@property), class: "btn-secondary flex items-center gap-2" do %>
      <span class="material-symbols-outlined">arrow_back</span>
      Back to Property
    <% end %>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
  <!-- Left Side: Configuration -->
  <div class="lg:col-span-4 space-y-6">
    <!-- Property Info -->
    <div class="card p-6">
      <div class="flex items-center gap-3 mb-4">
        <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
          <span class="material-symbols-outlined text-green-600">home</span>
        </div>
        <div>
          <h3 class="font-semibold text-slate-900"><%= @property.title %></h3>
          <p class="text-sm text-slate-500"><%= @property.colony_name %> - Plot <%= @property.plot_number %></p>
        </div>
      </div>
      <div class="space-y-2">
        <div class="flex items-center justify-between py-2 border-b border-slate-100">
          <span class="text-sm text-slate-500">Size</span>
          <span class="text-sm font-semibold text-slate-900"><%= number_with_delimiter(@property.size) %> sq ft</span>
        </div>
        <div class="flex items-center justify-between py-2 border-b border-slate-100">
          <span class="text-sm text-slate-500">Price</span>
          <span class="text-sm font-semibold text-slate-900">â‚¹<%= number_with_delimiter(@property.price) %></span>
        </div>
        <div class="flex items-center justify-between py-2">
          <span class="text-sm text-slate-500">Status</span>
          <span class="badge badge-<%= @property.status == 'available' ? 'success' : @property.status == 'sold' ? 'danger' : 'warning' %>">
            <%= @property.status.capitalize %>
          </span>
        </div>
      </div>
    </div>

    <!-- Generate Form -->
    <div class="card p-6">
      <h3 class="text-lg font-semibold mb-6 flex items-center gap-2">
        <span class="material-symbols-outlined text-primary">auto_awesome</span>
        Generate Posts
      </h3>

      <%= form_with url: ai_generate_social_post_path(@property), method: :post, local: true, html: { data: { turbo: false } } do |f| %>
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium mb-2 text-slate-700">Platform</label>
            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
            <div class="space-y-2">
              <div class="flex items-center gap-3 p-3 rounded-lg border border-slate-100">
                <span class="material-symbols-outlined text-pink-600">photo_camera</span>
                <div class="flex-1">
                  <p class="text-sm font-medium text-slate-900">Instagram</p>
                  <p class="text-xs text-slate-500">Photo-focused captions</p>
                </div>
                <input type="checkbox" name="platforms[]" value="instagram" checked class="w-5 h-5 rounded border-slate-300 text-primary focus:ring-primary">
              </div>

              <div class="flex items-center gap-3 p-3 rounded-lg border border-slate-100">
                <span class="material-symbols-outlined text-blue-600">facebook</span>
                <div class="flex-1">
                  <p class="text-sm font-medium text-slate-900">Facebook</p>
                  <p class="text-xs text-slate-500">Detailed posts</p>
                </div>
                <input type="checkbox" name="platforms[]" value="facebook" checked class="w-5 h-5 rounded border-slate-300 text-primary focus:ring-primary">
              </div>

              <div class="flex items-center gap-3 p-3 rounded-lg border border-slate-100">
                <span class="material-symbols-outlined text-green-600">chat</span>
                <div class="flex-1">
                  <p class="text-sm font-medium text-slate-900">WhatsApp</p>
                  <p class="text-xs text-slate-500">Direct messages</p>
                </div>
                <input type="checkbox" name="platforms[]" value="whatsapp" checked class="w-5 h-5 rounded border-slate-300 text-primary focus:ring-primary">
              </div>
            </div>
          </div>

          <button type="submit" class="w-full bg-primary hover:bg-primary/90 text-slate-900 font-bold py-4 rounded-xl flex items-center justify-center gap-2 transition-all">
            <span class="material-symbols-outlined">magic_button</span>
            Generate Social Posts
          </button>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Right Side: Results -->
  <div class="lg:col-span-8">
    <div class="card min-h-[600px]">
      <% if @instagram.present? %>
        <%# Clear session after displaying %>
        <% session.delete(:generated_social_post) %>
        
        <div class="p-6 border-b border-slate-100">
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-semibold text-slate-900">Generated Content</h3>
            <button class="flex items-center gap-2 text-sm font-semibold text-primary bg-primary/10 px-4 py-2 rounded-lg hover:bg-primary/20 transition-colors"
                    onclick="copyAllSocialContent()">
              <span class="material-symbols-outlined text-lg">content_copy</span>
              Copy All
            </button>
          </div>
        </div>
        
        <div class="p-6 space-y-6">
          <!-- Instagram -->
          <div class="p-4 rounded-xl border border-slate-200">
            <div class="flex items-center gap-2 mb-3">
              <span class="material-symbols-outlined text-pink-600">photo_camera</span>
              <h4 class="font-semibold text-slate-900">Instagram Caption</h4>
            </div>
            <div class="p-4 bg-slate-50 rounded-lg">
              <p class="text-sm text-slate-700 whitespace-pre-line"><%= @instagram %></p>
            </div>
            <button class="mt-2 text-xs font-semibold text-primary hover:text-primary/80"
                    onclick="navigator.clipboard.writeText('<%= j @instagram %>'); alert('Copied!');">
              <span class="material-symbols-outlined text-sm align-middle">content_copy</span> Copy
            </button>
          </div>
          
          <!-- Facebook -->
          <div class="p-4 rounded-xl border border-slate-200">
            <div class="flex items-center gap-2 mb-3">
              <span class="material-symbols-outlined text-blue-600">facebook</span>
              <h4 class="font-semibold text-slate-900">Facebook Post</h4>
            </div>
            <div class="p-4 bg-slate-50 rounded-lg">
              <p class="text-sm text-slate-700 whitespace-pre-line"><%= @facebook %></p>
            </div>
            <button class="mt-2 text-xs font-semibold text-primary hover:text-primary/80"
                    onclick="navigator.clipboard.writeText('<%= j @facebook %>'); alert('Copied!');">
              <span class="material-symbols-outlined text-sm align-middle">content_copy</span> Copy
            </button>
          </div>
          
          <!-- WhatsApp -->
          <div class="p-4 rounded-xl border border-slate-200">
            <div class="flex items-center gap-2 mb-3">
              <span class="material-symbols-outlined text-green-600">chat</span>
              <h4 class="font-semibold text-slate-900">WhatsApp Message</h4>
            </div>
            <div class="p-4 bg-slate-50 rounded-lg">
              <p class="text-sm text-slate-700 whitespace-pre-line"><%= @whatsapp_msg %></p>
            </div>
            <button class="mt-2 text-xs font-semibold text-primary hover:text-primary/80"
                    onclick="navigator.clipboard.writeText('<%= j @whatsapp_msg %>'); alert('Copied!');">
              <span class="material-symbols-outlined text-sm align-middle">content_copy</span> Copy
            </button>
          </div>
          
          <!-- Hashtags -->
          <div class="p-4 rounded-xl border border-slate-200">
            <div class="flex items-center gap-2 mb-3">
              <span class="material-symbols-outlined text-slate-400">tag</span>
              <h4 class="font-semibold text-slate-900">Hashtags</h4>
            </div>
            <div class="p-4 bg-slate-50 rounded-lg">
              <p class="text-sm text-slate-700"><%= @hashtags %></p>
            </div>
            <button class="mt-2 text-xs font-semibold text-primary hover:text-primary/80"
                    onclick="navigator.clipboard.writeText('<%= j @hashtags %>'); alert('Copied!');">
              <span class="material-symbols-outlined text-sm align-middle">content_copy</span> Copy Hashtags
            </button>
          </div>
        </div>
        
        <div class="p-6 bg-slate-50 border-t border-slate-100 flex items-center justify-between">
          <p class="text-xs text-slate-500 italic">Tip: Pair these with high-quality images for better engagement.</p>
          <div class="flex gap-3">
            <button class="flex items-center gap-2 px-4 py-2 border border-slate-200 rounded-lg text-sm font-medium hover:bg-slate-100 transition-colors">
              <span class="material-symbols-outlined text-lg">refresh</span>
              Regenerate
            </button>
            <button class="flex items-center gap-2 px-4 py-2 bg-slate-900 text-white rounded-lg text-sm font-medium hover:bg-slate-800 transition-colors">
              <span class="material-symbols-outlined text-lg">publish</span>
              Share
            </button>
          </div>
        </div>
      <% else %>
        <div class="h-full flex flex-col items-center justify-center text-center p-12">
          <span class="material-symbols-outlined text-slate-300 text-6xl mb-4">auto_awesome</span>
          <h3 class="text-lg font-semibold text-slate-900 mb-2">No Content Generated Yet</h3>
          <p class="text-slate-500 max-w-md">
            Select your preferred platforms and click "Generate Social Posts" to create AI-powered social media content.
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  function copyAllSocialContent() {
    <% if @instagram.present? %>
      const text = `<%= j @instagram %>\n\n<%= j @facebook %>\n\n<%= j @whatsapp_msg %>\n\n<%= j @hashtags %>`;
      navigator.clipboard.writeText(text);
      alert('All content copied to clipboard!');
    <% end %>
  }
</script>
