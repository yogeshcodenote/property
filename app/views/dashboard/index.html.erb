<div class="mb-8">
  <div class="flex items-center justify-between">
    <div>
      <h2 class="text-3xl font-bold tracking-tight text-slate-900">Overview</h2>
      <p class="text-slate-500 mt-1">Real-time performance and property insights for your colonies.</p>
    </div>
    <div class="flex gap-3">
      <%= link_to new_property_path, class: "btn-secondary flex items-center gap-2" do %>
        <span class="material-symbols-outlined">add_home</span>
        Add New Property
      <% end %>
      <%= link_to new_buyer_path, class: "btn-primary flex items-center gap-2" do %>
        <span class="material-symbols-outlined">person_add</span>
        Register Buyer
      <% end %>
    </div>
  </div>
</div>

<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
  <div class="card p-6">
    <div class="flex items-center justify-between mb-4">
      <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
        <span class="material-symbols-outlined text-green-600">payments</span>
      </div>
      <span class="text-xs font-semibold text-green-600 bg-green-100 px-2 py-1 rounded">+12.5%</span>
    </div>
    <p class="text-sm text-slate-500">Total Sales Revenue</p>
    <p class="text-3xl font-bold text-slate-900 mt-1">$4,250,000</p>
  </div>
  
  <div class="card p-6">
    <div class="flex items-center justify-between mb-4">
      <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
        <span class="material-symbols-outlined text-green-600">map</span>
      </div>
      <span class="text-xs font-semibold text-green-600 bg-green-100 px-2 py-1 rounded">+4%</span>
    </div>
    <p class="text-sm text-slate-500">Total Plots Managed</p>
    <p class="text-3xl font-bold text-slate-900 mt-1"><%= @total_properties %> Plots</p>
  </div>
  
  <div class="card p-6">
    <div class="flex items-center justify-between mb-4">
      <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
        <span class="material-symbols-outlined text-green-600">trending_up</span>
      </div>
      <span class="text-xs font-semibold text-slate-500 bg-slate-100 px-2 py-1 rounded">Avg. Growth</span>
    </div>
    <p class="text-sm text-slate-500">Active Inquiries</p>
    <p class="text-3xl font-bold text-slate-900 mt-1"><%= @total_buyers %> Buyers</p>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
  <!-- Property Status Chart -->
  <div class="card p-6 lg:col-span-1">
    <h3 class="text-lg font-semibold text-slate-900 mb-6">Property Status</h3>
    <div class="flex flex-col items-center">
      <div class="relative w-48 h-48">
        <svg class="w-full h-full" viewBox="0 0 36 36">
          <!-- Available (Green) -->
          <path d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831" 
                fill="none" stroke="#dcfce7" stroke-width="3"/>
          <!-- Sold (Green) -->
          <path d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831" 
                fill="none" stroke="#11d473" stroke-width="3" 
                stroke-dasharray="<%= (@sold_properties.to_f / [@total_properties, 1].max * 100).round %>, 100" 
                stroke-dashoffset="25"/>
          <!-- Reserved (Yellow) -->
          <path d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831" 
                fill="none" stroke="#fbbf24" stroke-width="3" 
                stroke-dasharray="<%= (@reserved_properties.to_f / [@total_properties, 1].max * 100).round %>, 100" 
                stroke-dashoffset="25"/>
        </svg>
        <div class="absolute inset-0 flex items-center justify-center">
          <div class="text-center">
            <p class="text-4xl font-bold text-slate-900"><%= @total_properties %></p>
            <p class="text-xs text-slate-500 uppercase tracking-wider">Total</p>
          </div>
        </div>
      </div>
      
      <div class="mt-6 space-y-3 w-full">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-2">
            <div class="w-3 h-3 rounded-full bg-green-500"></div>
            <span class="text-sm text-slate-600">Sold</span>
          </div>
          <span class="text-sm font-semibold text-slate-900"><%= @sold_properties %></span>
        </div>
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-2">
            <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
            <span class="text-sm text-slate-600">Reserved</span>
          </div>
          <span class="text-sm font-semibold text-slate-900"><%= @reserved_properties %></span>
        </div>
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-2">
            <div class="w-3 h-3 rounded-full bg-green-100"></div>
            <span class="text-sm text-slate-600">Available</span>
          </div>
          <span class="text-sm font-semibold text-slate-900"><%= @available_properties %></span>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Recent Activity -->
  <div class="card p-6 lg:col-span-2">
    <div class="flex items-center justify-between mb-6">
      <h3 class="text-lg font-semibold text-slate-900">Recent Activity</h3>
      <%= link_to "View All", properties_path, class: "text-sm font-semibold text-primary hover:text-primary_hover" %>
    </div>
    <div class="space-y-4">
      <% @recent_properties.take(4).each do |property| %>
        <div class="flex items-center gap-4 p-3 rounded-lg hover:bg-slate-50 transition-colors">
          <div class="w-10 h-10 rounded-full bg-green-100 flex items-center justify-center">
            <span class="material-symbols-outlined text-green-600 text-sm">tag</span>
          </div>
          <div class="flex-1">
            <p class="text-sm font-medium text-slate-900">
              Plot #<%= property.plot_number %> (<%= property.colony_name %>) 
              <span class="text-slate-500">is</span> 
              <span class="font-semibold text-<%= property.status_color %>"><%= property.status.capitalize %></span>
            </p>
            <p class="text-xs text-slate-500"><%= time_ago_in_words(property.created_at) %> ago</p>
          </div>
          <div class="text-right">
            <p class="text-sm font-semibold text-slate-900">₹<%= number_with_delimiter(property.price) %></p>
          </div>
        </div>
      <% end %>
      
      <% @recent_buyers.take(2).each do |buyer| %>
        <div class="flex items-center gap-4 p-3 rounded-lg hover:bg-slate-50 transition-colors">
          <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center">
            <span class="material-symbols-outlined text-blue-600 text-sm">person_add</span>
          </div>
          <div class="flex-1">
            <p class="text-sm font-medium text-slate-900">
              New buyer registered: <span class="font-semibold"><%= buyer.name %></span>
            </p>
            <p class="text-xs text-slate-500"><%= time_ago_in_words(buyer.created_at) %> ago</p>
          </div>
          <div class="text-right">
            <p class="text-sm font-semibold text-slate-900">₹<%= number_with_delimiter(buyer.sale_price) %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Interactive Colony Map Preview -->
<div class="card p-6">
  <div class="flex items-center justify-between mb-6">
    <h3 class="text-lg font-semibold text-slate-900">Interactive Colony Map</h3>
    <div class="flex gap-2">
      <% @colony_names.take(3).each do |colony| %>
        <%= link_to colony_map_path(colony: colony), class: "text-xs font-medium px-3 py-1.5 rounded-full bg-green-100 text-green-700 hover:bg-green-200 transition-colors" do %>
          <%= colony %>
        <% end %>
      <% end %>
      <%= link_to "Change Colony", colony_map_path, class: "text-xs font-medium px-3 py-1.5 rounded-full bg-slate-100 text-slate-700 hover:bg-slate-200 transition-colors" %>
    </div>
  </div>
  <div class="h-64 bg-slate-100 rounded-xl flex items-center justify-center border-2 border-dashed border-slate-300">
    <div class="text-center">
      <span class="material-symbols-outlined text-slate-400 text-6xl mb-4">map</span>
      <p class="text-slate-500">Select a colony to view the interactive map</p>
      <div class="mt-4">
        <%= link_to colony_map_path, class: "btn-primary inline-flex items-center gap-2" do %>
          <span class="material-symbols-outlined">map</span>
          Open Map
        <% end %>
      </div>
    </div>
  </div>
</div>
