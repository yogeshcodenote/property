<div class="min-h-screen bg-gradient-to-br from-green-50 to-emerald-100 flex items-center justify-center p-4">
  <div class="w-full max-w-md">
    <!-- Logo and Title -->
    <div class="text-center mb-8">
      <div class="inline-flex items-center justify-center w-16 h-16 bg-primary rounded-2xl mb-4 shadow-lg">
        <span class="material-symbols-outlined text-white text-4xl">home_work</span>
      </div>
      <h1 class="text-3xl font-bold text-slate-900 mb-2">Create Account</h1>
      <p class="text-slate-600">Join PropSales AI today</p>
    </div>

    <!-- Sign Up Card -->
    <div class="card p-8">
      <h2 class="text-2xl font-bold text-slate-900 mb-6 text-center">Get Started</h2>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :email, class: "block text-sm font-medium text-slate-700 mb-2" %>
          <div class="relative">
            <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-slate-400">email</span>
            <%= f.email_field :email, 
                autofocus: true, 
                autocomplete: "email", 
                placeholder: "Enter your email",
                class: "input-field w-full pl-10" %>
          </div>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium text-slate-700 mb-2" %>
          <div class="relative">
            <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-slate-400">lock</span>
            <%= f.password_field :password, 
                autocomplete: "new-password", 
                placeholder: "Create a password",
                class: "input-field w-full pl-10" %>
          </div>
          <% if @minimum_password_length %>
            <p class="mt-1 text-xs text-slate-500">Minimum <%= @minimum_password_length %> characters</p>
          <% end %>
        </div>

        <div>
          <%= f.label :password_confirmation, class: "block text-sm font-medium text-slate-700 mb-2" %>
          <div class="relative">
            <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-slate-400">lock</span>
            <%= f.password_field :password_confirmation, 
                autocomplete: "new-password", 
                placeholder: "Confirm your password",
                class: "input-field w-full pl-10" %>
          </div>
        </div>

        <div>
          <%= f.label :role, "Account Type", class: "block text-sm font-medium text-slate-700 mb-2" %>
          <div class="grid grid-cols-2 gap-3">
            <label class="relative flex items-center p-4 rounded-lg border-2 cursor-pointer transition-all
                <%= f.object.role == 'buyer' ? 'border-primary bg-green-50' : 'border-slate-200 hover:border-slate-300' %>">
              <%= f.radio_button :role, 'buyer', class: "hidden" %>
              <div class="flex-1 text-center">
                <span class="material-symbols-outlined text-2xl mx-auto mb-1 text-green-600">person</span>
                <p class="text-sm font-semibold text-slate-900">Buyer</p>
                <p class="text-xs text-slate-500">Browse properties</p>
              </div>
            </label>
            
            <label class="relative flex items-center p-4 rounded-lg border-2 cursor-pointer transition-all
                <%= f.object.role == 'admin' ? 'border-primary bg-green-50' : 'border-slate-200 hover:border-slate-300' %>">
              <%= f.radio_button :role, 'admin', class: "hidden" %>
              <div class="flex-1 text-center">
                <span class="material-symbols-outlined text-2xl mx-auto mb-1 text-blue-600">admin_panel_settings</span>
                <p class="text-sm font-semibold text-slate-900">Admin</p>
                <p class="text-xs text-slate-500">Manage properties</p>
              </div>
            </label>
          </div>
        </div>

        <%= f.submit "Create Account", class: "btn-primary w-full py-3 text-lg" %>
      <% end %>

      <div class="mt-6 pt-6 border-t border-slate-200">
        <p class="text-center text-sm text-slate-600">
          Already have an account?
          <%= link_to "Sign in", new_session_path(resource_name), class: "text-primary font-semibold hover:text-primary/80" %>
        </p>
      </div>
    </div>
  </div>
</div>
